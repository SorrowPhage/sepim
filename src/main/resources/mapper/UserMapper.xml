<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个指定的Mapper接口-->
<mapper namespace="com.sepim.springboot.mapper.UserMapper">

    <select id="followUser" resultType="com.sepim.springboot.entity.User">
        select u.id,u.username,u.avatar_url from user u where id=#{userId}
    </select>

</mapper>